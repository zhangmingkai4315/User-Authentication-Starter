<!-- views/user/change_password_from_email.ejs -->

<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
</head>
<body class="container">
    <header>
        <% include ../partials/header %>
    </header>
    <main class="row">
          <form id="change_password_from_email" class="col-lg-5 col-md-6 col-sm-12" method="post">
            <div class="form-group">
              <label for="password1">新密码</label>
              <input type="password" class="form-control" id="password1" name="password1" required>
            </div>
            <div class="form-group">
              <label for="user_password">确认密码</label>
              <input type="password" class="form-control" id="password1" name="password2" required>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken%>">
            <div class="form-group">
                <button type="submit" class="btn btn-default">确认修改</button>
            </div>
            <% include ../partials/error %>
          </form>
    </main>
    <footer class="row">
        <% include ../partials/footer %>
    </footer>
</body>
</html>
