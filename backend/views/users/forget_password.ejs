<!-- views/user/forget_password.ejs -->

<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main class="row">
      <form id="forget_password_form" class="col-lg-5 col-md-6 col-sm-12" method="post">
        <div class="form-group">
          <label for="user_email">请输入个人邮箱账号</label>
          <input type="email" class="form-control" id="user_email" name="username" placeholder="Email" required>
        </div>

        <div class="form-group">
          <label for="user_password2">请选择一个安全问题</label>
          <select class="form-control" name="selected_question" default=>
            <% for(var i=0; i<questions.length; i++) {%>
               <option value=<%= i%>><%= questions[i]%></option>
            <% } %>
          </select>
          <textarea type="text" class="form-control" name="answer_question" required></textarea>
        </div>


        <input type="hidden" name="_csrf" value="<%= csrfToken%>">
        <div class="form-group">
            <button type="submit" class="btn btn-default">发送确认邮件</button>
        </div>
        <% include ../partials/error %>
      </form>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>
</html>
